{
    "name": "neuron-php/cms",
    "description": "Content Management System.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Lee Jones",
            "email": "lee@dragonflyrg.com"
        }
    ],
    "require": {
        "ext-curl": "*",
        "ext-json": "*",
        "neuron-php/mvc": "0.9.*",
        "neuron-php/data": "0.9.*",
        "neuron-php/cli": "0.8.*",
        "neuron-php/jobs": "0.2.*",
        "neuron-php/orm": "0.1.*",
        "neuron-php/dto": "0.0.*",
        "phpmailer/phpmailer": "^6.9",
        "cloudinary/cloudinary_php": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "mikey179/vfsstream": "^1.6",
        "neuron-php/scaffolding": "0.8.*"
    },
    "autoload": {
        "psr-4": {
            "Neuron\\": "src/"
        },
        "files": [
            "src/Bootstrap.php",
            "src/Cms/Auth/helpers.php",
            "src/Cms/Email/helpers.php",
            "src/Cms/View/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "neuron": {
            "cli-provider": "Neuron\\Cms\\Cli\\Provider"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@php -r \"echo '\\n╔════════════════════════════════════════════════╗\\n';\"",
            "@php -r \"echo '║  Neuron CMS Updated                            ║\\n';\"",
            "@php -r \"echo '╚════════════════════════════════════════════════╝\\n';\"",
            "@php -r \"echo '\\n⚠️  Run upgrade command to apply changes:\\n';\"",
            "@php -r \"echo '   php neuron cms:upgrade\\n\\n';\""
        ]
    }
}
