{
    "name": "neuron-php/cms",
    "description": "Content Management System.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Lee Jones",
            "email": "lee@dragonflyrg.com"
        }
    ],
    "require": {
        "ext-curl": "*",
        "ext-json": "*",
        "neuron-php/mvc": "0.9.*",
        "neuron-php/routing": "0.8.*",
        "neuron-php/data": "0.9.*",
        "neuron-php/cli": "0.8.*",
        "neuron-php/jobs": "0.2.*",
        "neuron-php/orm": "0.1.*",
        "neuron-php/dto": "0.0.*",
        "phpmailer/phpmailer": "^6.9",
        "cloudinary/cloudinary_php": "^2.0",
        "php-di/php-di": "^7.1",
        "symfony/yaml": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "mikey179/vfsstream": "^1.6",
        "neuron-php/scaffolding": "0.8.*",
        "phpstan/phpstan": "^1.10",
        "phpstan/extension-installer": "^1.3",
        "infection/infection": "^0.32.0",
        "codeception/codeception": "^5.3",
        "codeception/module-phpbrowser": "^3.0",
        "codeception/module-asserts": "^3.2",
        "codeception/module-db": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Neuron\\": "src/"
        },
        "files": [
            "src/Bootstrap.php",
            "src/Cms/Auth/helpers.php",
            "src/Cms/Email/helpers.php",
            "src/Cms/View/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "neuron": {
            "cli-provider": "Neuron\\Cms\\Cli\\Provider"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@php scripts/post-update.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "infection/extension-installer": true
        }
    }
}
